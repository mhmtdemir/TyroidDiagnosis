<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
    android:layout_margin="10dp"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/timeParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Son Görüşme"
                android:textSize="12dp"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/hastaDurum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/oil"
                    android:theme="@style/MyCheckBox" />

                <LinearLayout
                    android:id="@+id/timeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/hastaDurum"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="22.18.18"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12dp"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="09:15"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12dp"


                        />


                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/hastalarimName"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/timeParent"
            android:background="@drawable/round"
            android:backgroundTint="@color/primary_light">

            <TextView
                android:id="@+id/hastaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:text="Ali Yiğit Tunali"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/doctor"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp">

            </com.mikhaellopez.circularimageview.CircularImageView>


        </RelativeLayout>


    </RelativeLayout>
